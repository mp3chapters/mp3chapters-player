{
  "build": {
    "beforeDevCommand": "webpack --config webpack.tauri.config.js",
    "beforeBuildCommand": "",
    "devPath": "../src-app",
    "distDir": "../src-app",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "MP3 Chapter Player",
    "version": "0.3.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true
      },
      "window": {
        "all": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$HOME/*", "$DESKTOP/*", "$DOCUMENT/*", "$DOWNLOAD/*", "$PUBLIC/*", "$VIDEO/*"]
      }
    },
    "cli": {
      "args": [
        {
          "name": "filename",
          "index": 1,
          "takesValue": true
        }
      ]
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.mp3chapters.player",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "signingIdentity": "-"
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "MP3 Chapter Player",
        "width": 900,
        "height": 600
      }
    ]
  }
}
